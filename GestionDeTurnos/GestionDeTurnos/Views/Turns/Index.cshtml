        function LoadChart1(action, title) {
            $('.Chart1').empty();
            var jsUrl = '@Url.Action("action")';
            $.ajax({
                    url: jsUrl.replace('action', action),
                    type: 'POST',
                    contentType: 'application/json; charset=utf-8;',
                   success: function (result) {
                       if (result.length>0) {
                           var findLabel = [];
                           var findNumber = [];
                           var findColor = [];

                           result.forEach(function (valor, indice, array) {
                               findLabel.push(valor.key);
                               findNumber.push(valor.cnt);
                               findColor.push(getRandomColor())
                           });

                           //Borro todo lo que hay adentro

