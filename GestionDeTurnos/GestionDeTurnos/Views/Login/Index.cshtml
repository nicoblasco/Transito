@model GestionDeTurnos.ViewModel.LoginViewModel

@{
    Layout = null;
}

    

<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Dirección de Transito - Municipalidad de Florencio Varela</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>

<body>
    @using (Html.BeginForm("Autenticar", "Login", FormMethod.Post, new { id = "loginform" }))
    {
        <div class="container">
            <div class="row">
                <div class="col-md-4 col-md-offset-4">
                    <div class="login-panel panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">Inicie Sesión</h3>
                        </div>
                        <div class="panel-body">
                            <form id="form-login" method="post" autocomplete="off" role="form">
                                <fieldset>
                                    <div class="form-group">
                                        <img src="~/Images/Logo.png" runat="server" />
                                    </div>
                                    <div class="form-group">
                                        @Html.TextBoxFor(x => x.NombreDeUsuario, new { placeholder = "Usuario", @class = "form-control", autofocus = "autofocus" })
                                        @Html.ValidationMessageFor(x => x.NombreDeUsuario, null, new { @class = "label label-danger" })
                                    </div>
                                    <div class="form-group">
                                        <input class="form-control" id="Password" placeholder="Password" name="Password" type="password" value="">
                                        @Html.ValidationMessageFor(x => x.Password, null, new { @class = "label label-danger" })
                                    </div>
                                    <div class="form-group">
                                        @Html.DropDownList("TerminalId", new SelectList(ViewBag.listaTerminales, "Id", "Descripcion"), htmlAttributes:
                                        new
                                        {
                                            @class = "select-buscador form-control input-sm",
                                            @style= "width: 100%",
                                           // @id = "input-Descripcion-Create"
                                        }
                                        )
                                        @Html.ValidationMessageFor(x => x.TerminalId, null, new { @class = "label label-danger" })
                                    </div>
                                    <button data-ajax="true" type="submit" class="btn btn-lg btn-success btn-block">Ingresar</button>
                                    @*<button type="button" id="btnAutenticar" class="btn btn-lg btn-success btn-block">Ingresar</button>*@
                                </fieldset>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>



    }


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/js")
    @Scripts.Render("~/bundles/login")

</body>

</html>
