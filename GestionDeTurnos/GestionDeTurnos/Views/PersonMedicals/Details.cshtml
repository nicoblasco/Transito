@model IEnumerable<GestionDeTurnos.Models.PersonMedical>

    @{
        ViewBag.Title = "Details";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

    <div id="page-wrapper">
        <div class="row">
            <h1 class="page-header">Datos Medicos</h1>


            <div role="form" class="form-horizontal">
                <div class="col-lg-12">

                    <!-- /. Panel de Datos del Infractor -->
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Datos Personales y del Tramite
                        </div>
                        <div class="panel-body">
                            <div class="form-group">
                                <div class="col-sm-3">
                                    <label>DNI</label><input class="form-control" placeholder="DNI" value="@ViewBag.Dni" type="text" disabled>
                                </div>
                                <div class="col-sm-3">
                                    <label>Apellido</label><input class="form-control" placeholder="Apellido" value="@ViewBag.Apellido" type="text" disabled>
                                </div>
                                <div class="col-sm-3">
                                    <label>Nombre</label><input class="form-control" placeholder="Nombre" value="@ViewBag.Nombre" type="text" disabled>
                                </div>
                                <div class="col-sm-3">
                                    <label>Edad</label><input class="form-control" placeholder="Edad" value="@ViewBag.Edad" type="text" disabled>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-3">
                                    <label for="exampleFormControlSelect1">Genero</label> <input class="form-control" placeholder="Genero" value="@ViewBag.Edad" type="text" disabled>
                                </div>
                                <div class="col-sm-3">
                                    <label for="example-datetime-local-input">Fecha/Hora de Ingreso</label>
                                    <input class="form-control" type="text" value="@ViewBag.fechaTurn" id="example-datetime-local-input" disabled>
                                </div>
                                <div class="col-sm-3">
                                    <label>Tipo de Tramite</label><input class="form-control" placeholder="Tipo de Tramite" value="@ViewBag.TipoTramiteTurn" type="text" disabled>
                                </div>

                                <div class="col-sm-3">
                                    <label>Nro Turno</label><input class="form-control" placeholder="Número de turno" type="text" value="@ViewBag.nroTurn" disabled>
                                </div>

                            </div>

                        </div>
                    </div>
                    <!-- /. FIN Panel de Datos del Infractor -->
                    <!-- /. Panel de Datos Medicos -->
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Datos Medicos
                        </div>
                        <div class="panel-body">
                            <form action="../Create" method="post">
                               <div class="form-group">
                                    <input id="nroTurn" name="nroTurn" class="form-control" value="@ViewBag.nroTurn" type="hidden">
                                    <input id="PersonId" name="PersonId" class="form-control" value="@ViewBag.PersonID" type="hidden">
                                </div>
                                <div class="form-group">
                                    <div class="col-sm-2">
                                        <label>AVOI</label><input id="Avoi" name="Avoi" class="form-control" placeholder="AVOI" type="number">
                                    </div>
                                    <div class="col-sm-2">
                                        <label>AVOD</label><input id="Avod" name="Avod" class="form-control" placeholder="AVOD" type="number">
                                    </div>
                                </div>

                                <div class="form-group">

                                    <div class="col-sm-12">
                                        <label class="checkbox-inline">
                                            <input id="Fuma" name="Fuma" type="checkbox">Fuma
                                        </label>
                                        <label class="checkbox-inline">
                                            <input id="Profesional" name="Profesional" type="checkbox">Profesional
                                        </label>
                                        <label class="checkbox-inline">
                                            <input id="ConduceConAnteojos" name="ConduceConAnteojos" type="checkbox">Conduce con Anteojos
                                        </label>
                                        <label class="checkbox-inline">
                                            <input id="VisionMonocular" name="VisionMonocular" type="checkbox">Visión Monocular
                                        </label>
                                        <label class="checkbox-inline">
                                            <input id="Discromatopsia" name="Discromatopsia" type="checkbox">Discromatopsia
                                        </label>
                                        <label class="checkbox-inline">
                                            <input id="HTA" name="HTA" type="checkbox">HTA
                                        </label>


                                    </div>
                                </div>

                                <div class="form-group">

                                    <div class="col-sm-12">

                                        <label class="checkbox-inline">
                                            <input id="DBT" name="DBT" type="checkbox">DBT
                                        </label>
                                        <label class="checkbox-inline">
                                            <input id="GAA" name="GAA" type="checkbox">G.A.A
                                        </label>
                                        <label class="checkbox-inline">
                                            <input id="AcidoUrico" name="AcidoUrico" type="checkbox">Acido Úrico
                                        </label>
                                        <label class="checkbox-inline">
                                            <input id="Colesterol" name="Colesterol" type="checkbox">Colesterol
                                        </label>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label>Observaciones</label>
                                    <textarea id="Observacion" name="Observacion" class="form-control" rows="3"></textarea>
                                </div>
                                <input type="submit" value="Guardar" class="btn btn-primary pull-right">
                                   
                               
                            </form>
                        </div>
                    </div>





                </div>
                <!-- /.col-lg-12 -->

            </div>

        </div>
        <!-- /.ro -->

        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                                <tr>
                                    <th>Fecha Ingreso</th>
                                    <th>Tipo Tramite</th>
                                    <th>AVOI</th>
                                    <th>AVOD</th>
                                    <th>Fuma</th>
                                    <th>Anteojos</th>
                                    <th>Vision Monocular</th>
                                    <th>Discromatopsia</th>
                                    <th>HTA</th>
                                    <th>DBT</th>
                                    <th>G.A.A</th>
                                    <th>Acido Urico</th>
                                    <th>Colesterol</th>
                                    <th>Observaciones</th>
                                </tr>
                            </thead>
                            <!--<tbody>
                                <tr class="odd gradeX">
                                    <td>2018/05/20 09:00</td>
                                    <td>Renovación</td>
                                    <td>10</td>
                                    <td>10</td>
                                    <td>NO</td>
                                    <td>NO</td>
                                    <td>NO</td>
                                    <td>NO</td>
                                    <td>NO</td>
                                    <td>NO</td>
                                    <td>NO</td>
                                    <td>NO</td>
                                    <td>NO</td>
                                    <td></td>
                                </tr>
                            </tbody>-->
                            <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="odd gradeX" id="@item.Id">
                                    <td>2018/05/20 09:00</td>
                                    <td>Renovación</td>
                                    <td>@item.Avoi</td>
                                    <td>@item.Avod</td>
                                    <td>@item.Fuma</td>
                                    <td>@item.Profesional</td>
                                    <td>@item.ConduceConAnteojos</td>
                                    <td>@item.VisionMonocular</td>
                                    <td>@item.Discromatopsia</td>
                                    <td>@item.HTA</td>
                                    <td>@item.DBT</td>
                                    <td>@item.AcidoUrico</td>
                                    <td>@item.Colesterol</td>
                                    <td>@item.Observacion</td>

                                </tr>
                            }
                            </tbody>

                            
                        </table>
                        <!-- /.table-responsive -->
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
    </div>
    <!-- /#page-wrapper -->
